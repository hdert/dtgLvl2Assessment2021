mixin nav-link(page, activePage, pageName)
  if page === activePage
    a.nav-link.active(href=page + '.pug', aria-current="page")= pageName
  else
    a.nav-link(href=page + '.pug')= pageName

mixin fake-nav-link(pageName)
  a.nav-link(href="#")= pageName

mixin footer-link(page, pageName)
  a.nav-link.px-0(href=page + '.pug')= pageName

mixin fake-footer-link(pageName)
  a.nav-link.px-0(href="#")= pageName
